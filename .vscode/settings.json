{
  "editor.tabSize": 2,
  "eslint.run": "onSave",
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    {
      "language": "javascript",
      "autoFix": true
    },
    {
      "language": "typescript",
      "autoFix": true
    },
    {
      "language": "vue",
      "autoFix": true
    },
    {
      "language": "html",
      "autoFix": true
    }
  ],
  "eslint.packageManager": "yarn",
  "eslint.options": {
    "configFile": ".eslintrc.js"
  },
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "editor.formatOnSave": false,
  "[scss]": {
    // prettierを直接利用
    "editor.formatOnSave": true
  },
  "prettier.eslintIntegration": false,
  "prettier.stylelintIntegration": true,
  "jsDocCompletion.enabled": false,
